{
	"name": "custom-japanese-proofreading",
	"displayName": "カスタム日本語校正",
	"description": "テキストファイルやMarkdownファイルの日本語を、カスタムルールでチェックできる拡張機能",
	"author": "knttnk",
	"publisher": "knttnk",
	"license": "MIT",
	"galleryBanner": {
		"color": "#424242",
		"theme": "dark"
	},
	"version": "0.2.0",
	"homepage": "https://github.com/knttnk/custom-japanese-proofreading",
	"bugs": {
		"url": "https://github.com/knttnk/custom-japanese-proofreading/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/knttnk/custom-japanese-proofreading.git"
	},
	"categories": [
		"Linters",
		"Other"
	],
	"activationEvents": [
		"onLanguage:html",
		"onLanguage:latex",
		"onLanguage:review",
		"onLanguage:markdown",
		"onLanguage:plaintext"
	],
	"keywords": [
		"Japanese",
		"proofreading",
		"linter",
		"linting",
		"spell",
		"grammar",
		"check",
		"custom",
		"日本語",
		"校正",
		"静的解析",
		"スペル",
		"誤字",
		"文法",
		"チェック",
		"カスタム"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"main": "./packages/client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "カスタム日本語校正",
			"properties": {
				"customJapaneseProofreading.maxNumberOfProblems": {
					"scope": "language-overridable",
					"type": "number",
					"default": 100,
					"description": "校正チェックを行う、1ドキュメント辺りの最大指摘数です。"
				},
				"customJapaneseProofreading.checkOn": {
					"scope": "language-overridable",
					"enum": [
						"save",
						"change"
					],
					"enumDescriptions": [
						"保存のたびにチェック",
						"変更のたびにチェック"
					],
					"default": "save",
					"description": "校正チェックを行うタイミングを指定します。"
				},
				"customJapaneseProofreading.textlintrcPaths": {
					"scope": "language-overridable",
					"type": "array",
					"items": {
						"type": "string",
						"uniqueItems": true,
						"pattern": "(.*.json|.*.jsonc|:default:)"
					},
					"default": [
						":default:",
						"./.textlintrc.json"
					],
					"markdownDescription": "textlintの設定ファイルのパスを指定するか、`:default:`と入力してデフォルトの設定を使用します。\n\n複数指定できます。pathは絶対参照するか、`./`を使ってワークスペースから相対参照してください。各ファイルはjsonにしてください。"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b --force",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"test": "sh ./scripts/e2e.sh",
		"package": "vsce package --follow-symlinks"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^4.2.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22.15.21",
		"@types/vscode": "^1.75.0",
		"@typescript-eslint/eslint-plugin": "^8.32.1",
		"@typescript-eslint/parser": "^8.32.1",
		"@vscode/vsce": "^3.4.1",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.4.0",
		"mocha": "^11.4.0",
		"prettier": "^3.5.3",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
	"workspaces": [
		"packages/*"
	]
}
